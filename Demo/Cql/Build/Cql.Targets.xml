<?xml version="1.0" encoding="utf-8" ?>
<Project>
	<ItemGroup>
		<ElmFiles Include="$(MSBuildProjectDirectory)\..\Elm\Json\*.json" />
		<ElmFiles Include="$(MSBuildProjectDirectory)\..\Elm\Json-cms\*.json" />
	</ItemGroup>

	<Target Name="Download CQL to ELM CLI via Maven" Inputs="Build\pom.xml" Outputs="Build\target\dependency\cql-to-elm-cli-2.11.0.jar">
		<Exec Command="mvn -f Build\pom.xml dependency:copy-dependencies" />
	</Target>
	<Target Name="CQL to ELM"
			DependsOnTargets="Download CQL to ELM CLI via Maven"
			AfterTargets="Build">
		<Message Text="Converting CQL to ELM"/>
		<Exec Command='java -classpath "$(MSBuildProjectDirectory)\Build\target\dependency\*" org.cqframework.cql.cql2elm.cli.CqlTranslator -input "$(MSBuildProjectDirectory)\input" -f JSON -output "$(MSBuildProjectDirectory)\..\Elm\Json" -locators true -result-types true'/>
		<Exec Command='java -classpath "$(MSBuildProjectDirectory)\Build\target\dependency\*" org.cqframework.cql.cql2elm.cli.CqlTranslator -input "$(MSBuildProjectDirectory)\input-cms" -f JSON -output "$(MSBuildProjectDirectory)\..\Elm\Json-cms" -locators true -result-types true'/>
	</Target>
	<Target Name="Delete ELM" AfterTargets="Clean">
		<Message Text="Deleting ELM files...$(MSBuildProjectDirectory)\..\Elm\Json\*.json" />
		<Delete Files="@(ElmFiles)" />
	</Target>
</Project>